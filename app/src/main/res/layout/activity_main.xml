<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffcc66"
    android:weightSum="99"
    tools:context="com.example.savandoshi.brtsapp.MainActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/cardview1"
        android:layout_weight="33">

        <Button
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="Route"
            android:textAlignment="center"
            android:textSize="22dp"
            android:textColor="#ff0000"
            android:background="@drawable/route"
            android:id="@+id/bRoute"/>

    </android.support.v7.widget.CardView>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_weight="33">


    <Button
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="Between two Station"
        android:background="@drawable/station"
        android:textAlignment="center"
        android:textSize="22dp"
        android:textColor="#ff0000"
        android:id="@+id/bStation"/>

</android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_weight="33">


    <Button
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="Fare"
        android:background="@drawable/rupee"
        android:textAlignment="center"
        android:textSize="22dp"
        android:textColor="#ff0000"
        android:id="@+id/bFare"/>
    </android.support.v7.widget.CardView>

</LinearLayout>
